<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <title>District Hub</title>
  </head>

  <body>
    <div class="main">
      <div class="districtinfo">
        <h2>Welcome <%=user.firstname%> <%=user.lastname%></h2>
        <h1>District <%=district.id%></h1>
        <h2><%=district.county%>, <%=district.state%></h2>
        <h3>Population: <%=district.population%></h3>
      </div>
      <div class="positions"><%- include('../partials/position'); %></div>
      <form action="/youvoted" method="get">
        <input type="submit" value="Cast Ballot" />
      </form>
      <form action="/logout" method="post">
        <input type="submit" value="Logout" />
      </form>
    </div>
  </body>
</html>
